<configuration supports_final="true">
  <property>
    <name>grafana.server.port</name>
    <value>3007</value>
    <description>grafana Server Port</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
  <property>
    <name>logging.dest</name>
    <value>/var/log/grafana</value>
    <description>If you would like to send
    the log output to a file you can set the path below.
    </description>
  </property>
  <property>
    <name>path.data</name>
    <value>/var/lib/grafana</value>
    <description>Path to directory where to store the data
    </description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
  </property>
</configuration>
